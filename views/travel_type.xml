<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_travel_type_tree" model="ir.ui.view">
            <field name="name">view_travel_type_tree</field>
            <field name="model">cd.travel.type.travel</field>
            <field name="arch" type="xml">
                <tree string="Travel type">
                    <field name="code"/>
                    <field name="name"/>
                    <field name="active"/>
                </tree>
            </field>
        </record>
        <record id="view_travel_type_form" model="ir.ui.view">
            <field name="name">view_travel_type_form</field>
            <field name="model">cd.travel.type.travel</field>
            <field name="arch" type="xml">
                <form string="Travel type">
                    <sheet>
                        <div class="oe_button_box" name="button_box">
                            <button class="oe_stat_button" type="object" name="toggle_active" icon="fa-archive">
                                <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                            </button>
                        </div>
                        <group>
                            <field name="code"/>
                            <field name="name"/>
                            <field name="description"/>
                        </group>
                    </sheet>
                    <div class="oe_chatter">
                        <field name="message_follower_ids" widget="mail_followers"/>
                        <field name="message_ids" widget="mail_thread"/>
                    </div>
                </form>
            </field>
        </record>
        <record id="view_travel_type_search" model="ir.ui.view">
            <field name="name">view_travel_type_search</field>
            <field name="model">cd.travel.type.travel</field>
            <field name="arch" type="xml">
                <search string="Search">
                    <field name="name"/>
                    <field name="code"/>
                    <separator/>
                </search>
            </field>
        </record>
        <record id="cd_travel_type_travel_act" model="ir.actions.act_window">
            <field name="name">Travel type</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">cd.travel.type.travel</field>
            <field name="view_mode">tree,form</field>
            <field name="search_id" ref="view_travel_type_search"/>
        </record>
        <menuitem id="cd_travel_type_travel_menu" name="Type"
                  parent="cd_travel_menu_travel"
                  action="cd_travel_type_travel_act"
                  groups="group_cd_travel_manager,group_cd_travel_admin"
                  sequence="1"
        />
    </data>
</odoo>